@model AutoVente.Models.Utilisateur

@using (Html.BeginForm("EditUtilisateur", "Admin"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <td data-title="@Html.DisplayNameFor(model => model.Nom)">
        @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
    </td>
    <td data-title="@Html.DisplayNameFor(model => model.Prenom)">
        @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
    </td>
    <td data-title="@Html.DisplayNameFor(model => model.Adresse.Ville)">
        @Model.Adresse.Ville
    </td>

    <td data-title="@Html.DisplayNameFor(model => model.Email)" >
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

    </td>
    <td data-title="@Html.DisplayNameFor(model => model.Telephone)">
        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })

    </td>
    <td data-title="@Html.DisplayNameFor(model => model.Role)" >
        @Html.EnumDropDownListFor(model => model.Role, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })

    </td>
    <td>
       
        <button type="submit" class="btn btn-success  fontBlack"><i class="fas fa-check"></i><span class="noPhone"> Valider</span></button>
        <a href="AllUtilisateurs" class=" btn btn-info fontBlack"><i class="fas fa-undo-alt"></i><span class="noPhone"> Annuler</span></a>

    </td>

    

}

