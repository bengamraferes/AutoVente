@model AutoVente.ViewsModels.ModelMarqueViewModel


@using (Html.BeginForm("Create", "Model"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal col-lg-12 w-100">
    
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row mb-4">
        <div class="col">
            <label class="form-label" for="Nom">Nom</label>
           <div class="form-outline">
               @Html.EditorFor(model => model.Model.Nom, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nom du model" } } )
               
               @Html.ValidationMessageFor(model => model.Model.Nom, "", new { @class = "text-danger" })
           </div>
        </div>
        <div class="col">
            <label class="form-label" for="form6Example1">Nom marque </label>
            <div class="form-outline">
                <select class="form-control" aria-label=".form-select-lg example " name="MarqueId" pla>
                    <option disabled  selected>Nom de la marque</option>
                    @foreach (var marque in Model.Marques)
                    {
                        <option value="@marque.Id">@marque.Nom</option>
                    }
                </select>
            </div>
        </div>

    </div>
    <div class="row mb-4">
        <div class="col">
            @Html.LabelFor(model => model.Model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-outline">
                @Html.EditorFor(model => model.Model.Numero, new { htmlAttributes = new { @class = "form-control", @placeholder = "Numero du model" } })
                @Html.ValidationMessageFor(model => model.Model.Numero, "", new { @class = "text-danger" })
