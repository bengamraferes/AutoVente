                @Html.ValidationMessageFor(model => model.Model.Annee, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col">
            @Html.LabelFor(model => model.Model.Carburent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-outline">
                @Html.EnumDropDownListFor(model => model.Model.Carburent, htmlAttributes: new { @class = "form-control" , @placeholder = "Essance" })
                @Html.ValidationMessageFor(model => model.Model.Carburent, "", new { @class = "text-danger" })
            </div>
        </div>
