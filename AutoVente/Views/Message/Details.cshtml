@model AutoVente.Models.Message

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<p>
    <a href="/Message" class="btnPersoMessage btn btn-info fontBlack"><i class="fas fa-chevron-left"></i> Retour</a>
</p>

<h2 class="fontBlack">@Html.DisplayFor(model => model.Utilisateur.FullName)</h2>
<span>
    <a href="tel:@Model.Utilisateur.Telephone"><i class="fas fa-phone-square-alt"></i> @Model.Utilisateur.Telephone</a>
</span>
<div class="text-right fontBlack">
    Message reçu le : @Html.DisplayFor(model => model.Date)
</div>

<div class="card-message-details fontBlack">
    <h3 class="message-title">@Html.DisplayFor(model => model.Titre)</h3>

    <p class="message-content">
        @Html.DisplayFor(model => model.Contenu)
    </p>
</div>

<div class="text-right">
    <a href="mailto:@Model.Utilisateur.Email" class="btn btnPersoMessage  btn-success fontBlack"><i class="fas fa-reply"></i> Répondre</a>

    <button type="button" class="btn btn-danger btnPersoMessage fontBlack" data-toggle="modal" data-target="#@Model.Id">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</div>


<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Supprimer</h3>
            </div>
            <div class="modal-body">
                Etes-vous sûr de vouloir supprimer se message ?
            </div>
            <div class="modal-footer">
                <form method="post" action="/Couleur/Delete/@Model.Id">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Annuler</button>
                    <input type="submit" class="btn btn-danger" value="Valider">
                </form>
            </div>
        </div>
    </div>
</div>
