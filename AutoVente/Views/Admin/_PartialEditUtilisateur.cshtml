@model AutoVente.Models.Utilisateur

@using (Html.BeginForm("EditUtilisateur", "Admin"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <td>
        @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
    </td>
    <td>
        @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
    </td>
    <td>
        @Model.Adresse.Ville
    </td>

    <td>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

    </td>
    <td>
        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })

    </td>
    <td>
        @Html.EnumDropDownListFor(model => model.Role, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })

    </td>
    <td> 
            <input type="submit" value="Save" class="btn btn-default" />
            <a href="AllUtilisateurs" class="btn btn-danger">Anuler</a>
    </td>

    

}

