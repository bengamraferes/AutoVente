@model IEnumerable<AutoVente.Models.Couleur>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Liste des couleurs</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            <span>Aperçu</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeCouleur)
        </th>
        <th>
            <a href="~/Couleur/Create" class="button btn btn-success">
                <span class="fontBlack">Nouvelle couleur <i class="fas fa-plus"></i></span>
            </a>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        <input type="color" name="Color" value="@item.CodeCouleur" disabled />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CodeCouleur)
    </td>
    <td class="d-flex flex-column">

        <a href="~/Controllers/Edit/@item.Id" class="button btn btn-info">
            <i class="far fa-edit fontBlack"></i>
        </a>

        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@item.Id">
            <i class="fas fa-trash-alt fontBlack"></i>
        </button>

        <div class="modal fade" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Supprimer</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Etes vous spur de vouloir supprimer cette couleur ?
                    </div>
                    <div class="modal-footer">
                        <form method="post" action="/Couleur/Delete/@item.Id">
                            <button type="button" class="btn btn-info" data-dismiss="modal">Annuler</button>
                            <input type="submit" class="btn btn-danger" value="Valider">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </td>
</tr>
}

</table>

