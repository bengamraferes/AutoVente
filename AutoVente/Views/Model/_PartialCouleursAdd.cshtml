@model AutoVente.ViewsModels.CouleurModelViewModel



@using (Html.BeginForm("Couleur", "Model"))

{
    @Html.HiddenFor(model => model.Id);
    <div class=" d-flex flex-row  justify-content-between">
    <div class="p-2 row row-flex w-75  ">
            @for (var i = 0; i < Model.ChekboxViewModels.Count; i++)
            {

                <div class="col-md-2 col-sm-6 col-xs-12  ">

                    @Html.CheckBoxFor(model => model.ChekboxViewModels[i].Checked)

                    @Html.HiddenFor(model => model.ChekboxViewModels[i].IdCouleur)
                    <p>
                        @Model.couleurView[i].Nom
                    </p>
                    <input type="color" name="Color" id="ColorPicker" value=" @Model.couleurView[i].CodeCouleur" disabled />
                </div>

            }
        </div>

  
    <div class="w-25 d-flex flex-column align-items-end ">
        <button type="submit" class="btn btn-success  fontBlack btnNouvelleCouleurVS" ><i class="fas fa-check"></i><span class="noTable"> Valider</span></button>
        <a href="~/Model" class=" btn btn-info fontBlack btnNouvelleCouleurVS"><i class="fas fa-undo-alt"></i><span class="noTable"> Annuler</span></a>
    </div>
</div>
}
